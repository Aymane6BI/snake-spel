import turtle
import time
import random
from code import Snake
scherm = turtle.Screen()
scherm.title("Spel van Aymane")
scherm.bgcolor("lightblue")
scherm.setup(width=600, height=600)
scherm.tracer(0)
scherm.exitonclick()
snake = Snake()
Game_is_on = True
while Game_is_on:
    scherm.update()
    time.sleep(0.1)
    snake.move()


# hiermee zou je het lichaam van de slang moeten krijgen en tevens laten bewegen:

from turtle import Screen
from code import Snake
import time

scherm = Screen()
scherm.title("Spel van Aymane")
scherm.bgcolor("lightblue")
scherm.setup(width=600, height=600)
scherm.tracer(0)

snake = Snake()

Game_is_on = True
while Game_is_on:
    scherm.update()
    time.sleep(0.1)
    snake.move()

scherm.exitonclick()
